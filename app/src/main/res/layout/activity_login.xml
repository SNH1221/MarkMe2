<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#ffffff">

    <!-- Title -->
    <TextView
        android:id="@+id/tvLoginTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN STUDENT | PARENT"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp"
        android:layout_below="@+id/markmelogo"/>

    <!-- Number Input -->
    <EditText
        android:id="@+id/etNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Number"
        android:inputType="text"
        android:padding="12dp"
        android:layout_below="@id/tvLoginTitle"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"/>

    <!-- Password Input -->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:layout_below="@id/etNumber"
        android:layout_marginBottom="24dp"/>

    <!-- Login Button -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:layout_below="@id/etPassword"
        android:layout_marginTop="16dp"/>

    <!-- Admin Login Link -->
    <TextView
        android:id="@+id/tvAdminLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click here for Admin Login"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_below="@id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/markmelogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/markmelogo"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
