<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="12dp">

    <ImageView
        android:id="@+id/imgStatus"
        android:layout_width="14dp" android:layout_height="14dp"
        android:layout_centerVertical="true"
        android:src="@drawable/dot_pending"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgStatus" android:layout_marginStart="12dp"
        android:text="Student Name" android:textStyle="bold" android:textSize="16sp"/>

    <TextView
        android:id="@+id/tvNumber"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgStatus" android:layout_below="@id/tvName"
        android:layout_marginStart="12dp" android:layout_marginTop="4dp"
        android:text="1001" android:textSize="14sp" android:textColor="#666"/>
</RelativeLayout>
